<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F543959F"
    tools:context=".modeloDeSubstituicao">

    <Button
        android:id="@+id/button6"
        android:layout_width="41dp"
        android:layout_height="40dp"
        android:text="+"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="598dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Criar cardápio flexivel"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="609dp" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="415dp"
        android:layout_height="59dp"
        android:background="  #F543959F"
        android:clickable="true"
        app:tabBackground="#F543959F"
        app:tabIconTint="@color/black"
        app:tabIndicatorColor="#3F51B5"
        app:tabIndicatorGravity="bottom"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#F5F3F4F4"
        app:tabTextColor="#F6EFEF"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="4dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardápios" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diário" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estatísticas" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações" />
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cardápios"
        android:textAllCaps="true"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="83dp" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="325dp"
        android:layout_height="36dp"
        android:background="  #F543959F"
        android:clickable="true"
        app:tabBackground="#F543959F"
        app:tabIconTint="@color/black"
        app:tabIndicatorColor="#3F51B5"
        app:tabIndicatorGravity="bottom"
        app:tabMode="fixed"
        app:tabSelectedTextColor="#F5F3F4F4"
        app:tabTextColor="#F6EFEF"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="125dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fixos" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="modelos flexíveis" />
    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Visualize a lista de substituições"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="666dp" />

    <View
        android:id="@+id/view"
        android:layout_width="334dp"
        android:layout_height="409dp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="173dp" />
</androidx.constraintlayout.widget.ConstraintLayout>